@{
  Layout = "_Layout";
}

@model Treat.Models.Snack

<h2>Add a Flavor</h2>
<h4>Add a Flavor to Snack: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.SnackId)
  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")
  <input type="submit" value="Save" />
}
<button>@Html.ActionLink("Back to list", "Index")</button>
