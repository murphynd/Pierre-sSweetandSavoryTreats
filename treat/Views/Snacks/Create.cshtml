@{
  Layout = "_Layout";
}
@model Treat.Models.Snack
<div class="container">
  <div class="jumbotron">
    <h4>Snacks </h4>
    <h1>Create</h1>
  </div>
  @using (Html.BeginForm())
  {
    <h4>Name of Snack</h4>
    @Html.TextBoxFor(model => model.Name, new {required = "required"})
    <h4>Description</h4>
    @Html.TextBoxFor(model => model.Disc, new { required = "required" })
    <input type="submit" value="Add new Snack" class="btn btn-outline-dark" />
  }
</div>