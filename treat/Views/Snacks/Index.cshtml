@{
  Layout = "_Layout";
}

@using Treat.Models;
<div class="container">
  <div class="jumbotron">
    <h4>Snacks </h4>
    <h1>Index</h1>
  </div>
  @if (Model.Count == 0)
  {
    <p>There are not Snacks in stock!</p>
  }
  <ol>
    @foreach (Snack snack in Model)
    {
      <li>@Html.ActionLink(snack.Name, "Details", new{id=snack.SnackId})</li>
    }
  </ol>
  @Html.ActionLink("Create New Snack","Create", new { @class="btn btn-info" })
</div>