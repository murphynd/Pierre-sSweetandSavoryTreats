@{
  Layout = "_Layout";
}

@using Treat.Models;
<div class="container">
  <div class="jumbotron">
    <h4>Flavors</h4>
    <h1>Index</h1>
  </div>
  @if (Model.Count == 0)
  {
    <p>No Flavors! </p>
  }
  <ol>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink(flavor.Name, "Details", new{id=flavor.FlavorId})</li>
    }
  </ol>
  @Html.ActionLink("Create New Flavor","Create", new { @class="btn btn-info" })
</div>