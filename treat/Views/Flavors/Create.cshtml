@{
  Layout = "_Layout";
}
@model Treat.Models.Flavor
<div class="container">
  <div class="jumbotron">
    <h4>Flavors </h4>
    <h1>Create</h1>
  </div>
  @using (Html.BeginForm())
  {
    <h4>Name of Flavor</h4>
    @Html.TextBoxFor(model => model.Name, new {required = "required"})
    <h4>Description</h4>
    @Html.TextBoxFor(model => model.Disc, new { required = "required" })
    <input type="submit" value="Add new Flavor" class="btn btn-outline-dark" />
  }
</div>
